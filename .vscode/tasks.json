{
         "version": "2.0.0",
         "command": "make",
         "presentation":{
             "echo": true,
             "reveal": "always",
             "focus": false,
             "panel": "shared",
             "showReuseMessage": true,
             "clear": false
         },
         "tasks": [
            {
                "label": "clean"
            },
            {
                "label": "main",
                "problemMatcher": {
                    "owner": "cpp",
                    "fileLocation": [
                        "relative",
                        "${workspaceRoot}"
                    ],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                },
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            }
        ]
    }
   